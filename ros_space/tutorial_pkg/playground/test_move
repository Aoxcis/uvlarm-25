#!/usr/bin/python3
import rclpy
from rclpy.node import Node
from geometry_msgs.msg import Twist
from std_msgs.msg import String
import time

print("test_move :: START...")

class ROSTalker:
    def __init__(self, rosNode):
        self._publisher = rosNode.create_publisher(Twist, '/multi/cmd_nav', 10)
        self._timer = rosNode.create_timer(15.0, self.timer_callback)
    
    
    ########################################
    # Function to standarize the movement #
    ########################################

    def moveForward(self, time):
        velocity = Twist()
        for i in range(5):
            velocity.linear.x = 0.1*i
            self._publisher.publish(velocity)
            time.sleep(0.05)
        time.sleep(time)
        velocity.linear.x = 0.0
        self._publisher.publish(velocity)
    
    def moveBackward(self, time):
        velocity = Twist()
        for i in range(5):
            velocity.linear.x = -0.1*i
            self._publisher.publish(velocity)
            time.sleep(0.05)
        time.sleep(time)
        velocity.linear.x = 0.0
        self._publisher.publish(velocity)

    def turnRight(self, angle):
        velocity = Twist()
        angle = -angle*(7.33/180)
        velocity.angular.z = angle
        self._publisher.publish(velocity)
        time.sleep(1)
        velocity.angular.z = 0.0
        self._publisher.publish(velocity)
        

    def turnLeft(self, angle):
        velocity = Twist()
        velocity = Twist()
        angle = angle*(7.33/180)
        velocity.angular.z = angle
        self._publisher.publish(velocity)
        time.sleep(1)
        velocity.angular.z = 0.0
        self._publisher.publish(velocity)



    def timer_callback(self):
        velocity = Twist()
        velocity.linear.x = 0.5
        self._publisher.publish(velocity)
        # Move backward

        velocity.linear.x = -1.0
        self._publisher.publish(velocity)
        time.sleep(1)
        velocity.linear.x = 0.0
        print('arr')
        # Turn right
        velocity.angular.z = -2.0
        self._publisher.publish(velocity)
        time.sleep(1)
        velocity.angular.z = 2.0
        self._publisher.publish(velocity)
        time.sleep(1)       
        velocity.linear.x = 0.0
        velocity.angular.z = 0.0
        self._publisher.publish(velocity)

def infiniteTalk():
    # Initialize ROS node with ROS client
    rclpy.init()
    aNode = Node("avance")
    talker = ROSTalker(aNode)
    # Start infinite loop
    rclpy.spin(aNode)
    # Clean everything and switch the light off
    aNode.destroy_node()
    rclpy.shutdown()

# Execute the function.
if __name__ == "__main__":
    infiniteTalk()
    print('fin')